<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/matchDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/detailChampionImage"
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/spell1"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/detailChampionImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/spell2"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/detailChampionImage"
        app:layout_constraintTop_toBottomOf="@+id/spell1" />

    <ImageView
        android:id="@+id/mainRune"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/spell1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/subRune"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/spell2"
        app:layout_constraintTop_toBottomOf="@+id/spell1" />

    <TextView
        android:id="@+id/summonerTier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:text="C1"
        android:padding="2dp"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/summonerName"
        app:layout_constraintStart_toEndOf="@id/mainRune" />

    <TextView
        android:id="@+id/summonerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="저건 진짜다"
        android:textSize="12dp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/summonerTier"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="5 / 4 / 5"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/subRune"
        app:layout_constraintTop_toBottomOf="@+id/summonerName" />

    <ImageView
        android:id="@+id/item0"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:background="#d3d3d3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item1"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_marginStart="102dp"
        android:layout_marginTop="12dp"
        android:background="#d3d3d3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item2"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_marginTop="12dp"
        android:layout_marginStart="148dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/item3"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_marginTop="12dp"
        android:layout_marginStart="194dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/item4"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_marginTop="12dp"
        android:layout_marginStart="240dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/item5"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_marginTop="12dp"
        android:layout_marginStart="286dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/item6"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_marginTop="12dp"
        android:layout_marginStart="332dp"
        android:background="#d3d3d3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/csGold"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:text="206 / 1.2 G"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item0"
        app:layout_constraintTop_toBottomOf="@+id/summonerName" />

</androidx.constraintlayout.widget.ConstraintLayout>