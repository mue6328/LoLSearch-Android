<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="70dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/spectatorLayoutRed"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/championImage"
        android:layout_width="88px"
        android:layout_height="88px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/spell1"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_marginStart="4dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/championImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/spell2"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/championImage"
        app:layout_constraintTop_toBottomOf="@+id/spell1" />

    <ImageView
        android:id="@+id/mainRune"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_marginStart="4dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/spell1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/subRune"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/spell2"
        app:layout_constraintTop_toBottomOf="@+id/spell1" />

    <TextView
        android:id="@+id/summonerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SummonerName"
        android:textSize="12dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mainRune"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>